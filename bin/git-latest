#!/bin/sh
#
# Get master (or another branch you pass in) up to date and then end up back where you started.

origin="origin"
localBranch="master"
remoteBranch="master"
currentBranch=$(git branch --show-current)

if [ "$1" != "" ]; then
  remoteBranch=$1
  localBranch=$1
fi

if [ "$2" != "" ]; then
  origin=$1
  remoteBranch=$2
  localBranch=$2
fi

if [ "$3" != "" ]; then
  localBranch=$3
fi

if [ "$currentBranch" != "$localBranch" ]; then
  git fetch -p "$origin" "$remoteBranch":"$localBranch"
else
  git pull
  git fetch --prune
fi
